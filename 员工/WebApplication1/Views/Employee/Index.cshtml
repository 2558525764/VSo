@model WebApplication1.ViewModels.EmployeeListViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h2>@Model.UserName,@Model.Greeting</h2>
    <p><a href="/employee/addNew">新增</a></p>
    
    <div> 
        <form action="/employee/search" method="post">
                查询：<input type="text" name="searchString">
            <input type="submit" value="查询"/><input type="reset" value="重置"/>
            </form>
        <ul>
            @foreach (var item in Model.EmployeeViewList)
            {
                <li>@item.EmployeeName,@item.EmployeeSalary,@item.EmployeeGrade <a href="/employee/DeleteEmployee/@item.EmployeeID">删除</a> <a href="/employee/CompileEmployee/@item.EmployeeID">编辑</a></li>
            }
        </ul>
    </div>
</body>
</html>
